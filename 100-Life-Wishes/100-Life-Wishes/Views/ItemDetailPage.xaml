<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_100_Life_Wishes.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <StackLayout>
            <Label Text="Task:" FontSize="Medium" />
            <Entry Text="{Binding Text, Mode=TwoWay}" />
            <BoxView HeightRequest="20" />
            <Label Text="Description:" FontSize="Medium" />
            <Entry Text="{Binding Description, Mode=TwoWay}" />
        </StackLayout>
        <ListView ItemsSource="{Binding Subtasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid HeightRequest="200">
            <Button Text="Standard" Command="{Binding SetStandardImportance}" HorizontalOptions="Start" CornerRadius="50" ></Button>
            <Button Text="Important" Command="{Binding SetHighImportance}" HorizontalOptions="End" CornerRadius="50" ></Button>
        </Grid>
        <Button Text="Add subtask" Command="{Binding AddCommand}" CornerRadius="50" ></Button>
        <Button Text="Update" Command="{Binding UpdateCommand}" CornerRadius="50" ></Button>
        <Button Text="Delete" Command="{Binding DeleteCommand}" BackgroundColor="Red" CornerRadius="50" ></Button>
    </StackLayout>
    
</ContentPage>