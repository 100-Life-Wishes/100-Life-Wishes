<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_100_Life_Wishes.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Text:" FontSize="Medium" />
        <Label Text="{Binding Text}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>

        <StackLayout>
            <Entry Text="{Binding Text, Mode=TwoWay}" />
            <BoxView HeightRequest="20" />
            <Entry Text="{Binding Description, Mode=TwoWay}" />
        </StackLayout>
        <ListView x:Name="SubtasksListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Detail}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid>
            <Button Text="Update" Command="{Binding UpdateCommand}" HorizontalOptions="Start"></Button>
            <Button Text="Delete" Command="{Binding DeleteCommand}" BackgroundColor="Red" HorizontalOptions="End"></Button>
        </Grid>
    </StackLayout>
    
</ContentPage>